@inject NavigationManager Navigation
@inherits LayoutComponentBase
<div class="admin-layout">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <div class="d-flex">
        <div class="sidebar bg-light p-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <button class="btn-page d-flex" @onclick="() => ChangePage(1)">
                        <i class="fas fa-users"></i> Thí sinh
                    </button>
                </li>
                <li class="list-group-item">
                    <button class="btn-page d-flex" @onclick="() => ChangePage(2)">
                        <i class="fas fa-cogs"></i> Câu hỏi
                    </button>
                </li>
                <li class="list-group-item">
                    <button class="btn-page d-flex" @onclick="() => ChangePage(3)">
                        <i class="fas fa-cogs"></i> Lớp học
                    </button>
                </li>
            </ul>
        </div>
        <div class="content">
            @if (_page == 1)
            {
                <BLX.Pages.Admin.UserManage />
            }
            @if (_page == 2)
            {
                <BLX.Pages.Admin.QuestionManage />
            }
            @if (_page == 3)
            {
                <BLX.Pages.Admin.ClassManage />
            }
        </div>
    </div>
</div>

<style>
    .admin-layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
        width: 100%;
    }

    .navbar{
        padding: .5rem 1.5rem !important;
    }

    .d-flex {
        flex: 1;
    }

    .btn-page{
        background: none;
        border: none;
        width: 100%;
        float: left;
    }

    .sidebar {
        width: 250px;
        background-color: #f8f9fa;
        box-shadow: 1px 0px 14px #9b9b9b;
    }

    .list-group{
        padding: 5px 0;
        border-radius: 10px;
        border-radius: 10px;
    }
    .list-group-item + .list-group-item{
        border-top-width: 0;
    }

    .list-group-item {
        border: none;
        padding: 15px 20px;
        transition: background-color 0.3s;
        margin: 10px 0;
        border: none;
        padding: 15px 20px;
        transition: background-color 0.3s;
        box-shadow: -1px 3px 5px #9b9b9b;
        border-radius: 10px;
    }

    .list-group-item a {
        display: flex;
        align-items: center;
        color: #495057;
        text-decoration: none;
    }

    .list-group-item:hover {
        background-color: #e9ecef;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .list-group-item i {
        margin-right: 10px;
    }

    .content {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        padding: 5px 10px 0 10px;
    }
</style>
@code {
    public int _page = 1;
    public void ChangePage(int page)
    {
        _page = page;
    }
}
    