@page "/admin"
@inject NavigationManager Navigation

<div class="login-page">
    @if (isLoggedIn)
    {
        <AdminManage />
    }
    else
    {
        <div class="login-container">
            <h2 style="margin-bottom: 40px;">Đăng Nhập</h2>
            <div class="login-form">
                <input type="text" @bind="username" placeholder="Tên đăng nhập" class="form-control" />
                <input type="password" @bind="password" placeholder="Mật khẩu" class="form-control" />
                <button @onclick="HandleLogin" class="btn btn-primary">Đăng nhập</button>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <p class="error-message">@errorMessage</p>
                }
            </div>
        </div>
    }
</div>

<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f2f5;
    }
    .login-container {
        min-width: 27vw;
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .login-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .form-control {
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 0.5rem;
        border-radius: 4px;
        color: white;
        cursor: pointer;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
    .error-message {
        color: red;
    }
</style>

@code {
    private string username;
    private string password;
    private string errorMessage;
    private bool isLoggedIn = false;

    private void HandleLogin()
    {
        if (username == "admin" && password == "Tcn@123")
        {
            isLoggedIn = true;
        }
        else
        {
            errorMessage = "Tên đăng nhập hoặc mật khẩu không đúng";
        }
    }
}
